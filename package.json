{
    "name": "renpy-language-vscode",
    "displayName": "Ren'Py Language Support",
    "description": "Ren'Py language support for Visual Studio Code",
    "version": "0.3.0",
    "publisher": "williamd1k0",
    "icon": "img/renpyicon.png",
    "galleryBanner": {
		"color": "#ff7f7f",
		"theme": "dark"
	},
    "license": "LICENSE.MD",
    "engines": {
        "vscode": "^1.0.0"
    },
    "bugs": {
		"url": "https://github.com/williamd1k0/renpy-language-vscode/issues",
		"email": "tumeowilliam@gmail.com"
	},
    "repository": {
		"type": "git",
		"url": "https://github.com/williamd1k0/renpy-language-vscode.git"
	},
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "renpy",
            "aliases": ["Ren'Py", "renpy"],
            "extensions": [".rpy",".rpym"],
            "configuration": "./renpy.configuration.json"
        }],
        "grammars": [{
            "language": "renpy",
            "scopeName": "source.renpy",
            "path": "./syntaxes/renpy.json"
        }],
        "snippets": [
			{
				"language": "renpy",
				"path": "./snippets/renpy-snippets.json"
			}
		]
    }
}